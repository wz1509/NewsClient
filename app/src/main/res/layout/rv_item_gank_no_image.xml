<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/item_background"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/gank_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            tools:text="这4种胃病会变成胃癌？"/>

        <TextView
            android:id="@+id/gank_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="来源：网易健康"/>

        <TextView
            android:id="@+id/gank_item_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/gank_item_description"
            android:layout_toRightOf="@+id/gank_item_description"
            android:paddingBottom="5dp"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="2017-10-11 10:34"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>